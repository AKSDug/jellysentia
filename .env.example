# JellySentia Configuration

# Media Library Path (required)
MEDIA_PATH=/path/to/your/music

# Jellyfin Configuration
JELLYFIN_URL=http://localhost:8096
JELLYFIN_API_KEY=your-api-key-here

# Analysis Configuration
ANALYSIS_THREADS=4
ANALYSIS_DEPTH=standard
ANALYSIS_BATCH_SIZE=10

# Feature Extraction
ENABLE_TEMPO=true
ENABLE_KEY=true
ENABLE_ENERGY=true
ENABLE_DANCEABILITY=true
ENABLE_VALENCE=true
ENABLE_ACOUSTICNESS=true
ENABLE_INSTRUMENTALNESS=true
ENABLE_SPEECHINESS=true
ENABLE_LOUDNESS=true

# Tag Writing
ENABLE_TAG_WRITEBACK=true
TAG_PREFIX=JELLYSENTIA_

# Similarity Search
SIMILARITY_INDEX_SIZE=100
SIMILARITY_REBUILD_INTERVAL=daily

# Resource Limits
MAX_MEMORY_GB=2
MAX_CPU_PERCENT=80

# Logging
LOG_LEVEL=INFO
LOG_FILE=/data/jellysentia.log

# Web UI
WEBUI_PORT=8097
WEBUI_ENABLE=true

# Database
DATABASE_PATH=/data/jellysentia.db
DATABASE_BACKUP_ENABLED=true
DATABASE_BACKUP_INTERVAL=weekly